                </row>
								<row>
                  <entry align="left" colname="column1" leader-modify="force-ldr" rowsep="0" stub-definition="txt-ldr" stub-hierarchy="1">Tier 7</entry>
                  <entry align="left" colname="column2" leader-modify="force-ldr" rowsep="0"> 5 percent</entry>
                  <entry align="right" colname="column3" leader-modify="clr-ldr" rowsep="0">$3,600</entry>
                </row>
								<row>
                  <entry align="left" colname="column1" leader-modify="force-ldr" rowsep="0" stub-definition="txt-ldr" stub-hierarchy="1">Tier 8</entry>
                  <entry align="left" colname="column2" leader-modify="force-ldr" rowsep="0"> 3 percent</entry>
                  <entry align="right" colname="column3" leader-modify="clr-ldr" rowsep="0">$4,100</entry>
                </row>
								<row>
                  <entry align="left" colname="column1" leader-modify="force-ldr" rowsep="0" stub-definition="txt-ldr" stub-hierarchy="1">Tier 9</entry>
                  <entry align="left" colname="column2" leader-modify="force-ldr" rowsep="0"> 3 percent</entry>
                  <entry align="right" colname="column3" leader-modify="clr-ldr" rowsep="0">$4,600</entry>
                </row>
								<row>
                  <entry align="left" colname="column1" leader-modify="force-ldr" rowsep="0" stub-definition="txt-ldr" stub-hierarchy="1">Tier 10</entry>
                  <entry align="left" colname="column2" leader-modify="force-ldr" rowsep="0"> 3 percent</entry>
                  <entry align="right" colname="column3" leader-modify="clr-ldr" rowsep="0">$5,100 </entry>
                </row>
								<row>
                  <entry align="left" colname="column1" leader-modify="force-ldr" rowsep="0" stub-definition="txt-ldr" stub-hierarchy="1">Tier 11</entry>
                  <entry align="left" colname="column2" leader-modify="force-ldr" rowsep="0">1 percent</entry>
