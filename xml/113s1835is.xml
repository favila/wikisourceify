    <section id="H492EDFE94B1B4597A19FEC1EC50F617A" section-type="section-one">
      <enum>1.</enum>
      <header>Short title</header>
      <text display-inline="no-display-inline">This Act may be cited as the <quote>
          <short-title>Jobs Score Act of 2013</short-title>
        </quote>.</text>
    </section>
